<% content_for :title do %>Востановление пароля на naspr.ru<% end %>
<% content_for :description do %>Общественное мнение, истина, прав ли я, споры, мнения, дебаты, мнение народа, коллективные споры<% end %>
<% content_for :keywords do %>Общественное мнение, истина, прав ли я, споры, мнения, дебаты, мнение народа, коллективные споры<% end %>

<%= render :partial => 'templates/site_navigation' %>
<% form_for :user, :method => :post, :url => createnewpassword_users_url do |f| -%>
      <div class="error_messages">
  <%= f.error_messages %>
      </div>
      <div class="auth">
        <table class="authtable">
          <tr>
            <td class="authtablelabel">
              Новый пароль:
            </td>
            <td class="authinputtd">
            <% if @disableinput -%>
              <%= f.password_field :password, :class => "authinput", :disabled => true %>
            <% else -%>
              <%= f.password_field :password, :class => "authinput" %>
            <% end -%>

            </td>
          </tr>
          <tr>
            <td colspan="2" class="empatyzero"></td>
          </tr>
          <tr>
            <td class="authtablelabel">
              Повторите пароль:
            </td>
            <td class="authinputtd">
              <% if @disableinput -%>
                <%= f.password_field :password_confirmation, :class => "authinput", :disabled => true %>
              <% else %>
                <%= f.password_field :password_confirmation, :class => "authinput" %>
                <%= f.hidden_field :key %>
              <% end -%>

            </td>
          </tr>
        </table>

        <table class="fogetenter">
          <tr>
            <td colspan="2">
              <div class="newpasswordbutton">
                <% unless @disableinput -%>
                  <%= image_submit_tag("next_submit.png", :alt => "submit") %>
                <% end -%>

              </div>
            </td>
          </tr>
        </table>

<% end -%>
      </div>

