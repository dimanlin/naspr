
  <div class="group">
    <%= f.label :header, t("activerecord.attributes.debate.header", :default => "Header"), :class => :label %>
    <%= f.text_field :header, :class => 'text_field' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :user_id, t("activerecord.attributes.debate.user_id", :default => "User"), :class => :label %>
          <% if @debate.user -%>
            <%= link_to @debate.user.login, admin_user_url(@debate.user.id) %>
          <% else -%>
            nobody
          <% end -%>

  </div>

  <div class="group">
    <%= f.label :message, t("activerecord.attributes.debate.message", :default => "Message"), :class => :label %>
    <%= f.text_area :message, :class => 'text_area' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :check, t("activerecord.attributes.debate.check", :default => "Check"), :class => :label %>
    <%= f.check_box :check, :class => 'check_box' %>
    <span class="description">Ex: a simple text</span>
  </div>

<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>
  <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.cancel", :default => "Cancel")}")} #{t("web-app-theme.cancel", :default => "Cancel")}", admin_debates_path, :class => "button" %>
</div>

