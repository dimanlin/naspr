<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admin_contents_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_content_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_content_path %></li>
    </ul>
  </div>
  <div class="content">
    <div class="inner">

        <p>
          <b><%= t("activerecord.attributes.admin_content.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @content.name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_content.header", :default => t("activerecord.labels.header", :default => "Header")) %>:</b>
          <%= @content.header %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_content.text", :default => t("activerecord.labels.text", :default => "Text")) %>:</b>
          <%= @content.text %>
        </p>
      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}")} #{t("web-app-theme.edit", :default=> "Edit")}", edit_admin_content_path(@content), :class => "button" %>
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}")} #{t("web-app-theme.delete", :default => "Delete")}", admin_content_path(@content), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'templates/sidebar') -%>

