<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admin_users_path  %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_user_path %></li>
    </ul>
  </div>
  <div class="content">
    <div class="inner">

        <p>
          <b><%= t("activerecord.attributes.admin_user.login", :default => t("activerecord.labels.login", :default => "Login")) %>:</b>
          <%= @user.login %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_user.nick", :default => t("activerecord.labels.nick", :default => "Nick")) %>:</b>
          <%= @user.nick %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_user.crypted_password", :default => t("activerecord.labels.crypted_password", :default => "Crypted password")) %>:</b>
          <%= @user.crypted_password %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_user.password_salt", :default => t("activerecord.labels.password_salt", :default => "Password salt")) %>:</b>
          <%= @user.password_salt %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_user.master", :default => t("activerecord.labels.master", :default => "Master")) %>:</b>
          <%= @user.master %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_user.persistence_token", :default => t("activerecord.labels.persistence_token", :default => "Persistence token")) %>:</b>
          <%= @user.persistence_token %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_user.single_access_token", :default => t("activerecord.labels.single_access_token", :default => "Single access token")) %>:</b>
          <%= @user.single_access_token %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_user.perishable_token", :default => t("activerecord.labels.perishable_token", :default => "Perishable token")) %>:</b>
          <%= @user.perishable_token %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_user.login_count", :default => t("activerecord.labels.login_count", :default => "Login count")) %>:</b>
          <%= @user.login_count %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_user.failed_login_count", :default => t("activerecord.labels.failed_login_count", :default => "Failed login count")) %>:</b>
          <%= @user.failed_login_count %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_user.last_request_at", :default => t("activerecord.labels.last_request_at", :default => "Last request at")) %>:</b>
          <%= @user.last_request_at %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_user.current_login_at", :default => t("activerecord.labels.current_login_at", :default => "Current login at")) %>:</b>
          <%= @user.current_login_at %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_user.last_login_at", :default => t("activerecord.labels.last_login_at", :default => "Last login at")) %>:</b>
          <%= @user.last_login_at %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_user.current_login_ip", :default => t("activerecord.labels.current_login_ip", :default => "Current login ip")) %>:</b>
          <%= @user.current_login_ip %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_user.last_login_ip", :default => t("activerecord.labels.last_login_ip", :default => "Last login ip")) %>:</b>
          <%= @user.last_login_ip %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_user.avatar_file_name", :default => t("activerecord.labels.avatar_file_name", :default => "Avatar file name")) %>:</b>
          <%= @user.avatar_file_name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_user.avatar_content_type", :default => t("activerecord.labels.avatar_content_type", :default => "Avatar content type")) %>:</b>
          <%= @user.avatar_content_type %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_user.avatar_file_size", :default => t("activerecord.labels.avatar_file_size", :default => "Avatar file size")) %>:</b>
          <%= @user.avatar_file_size %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_user.avatar_updated_at", :default => t("activerecord.labels.avatar_updated_at", :default => "Avatar updated at")) %>:</b>
          <%= @user.avatar_updated_at %>
        </p>
      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}")} #{t("web-app-theme.edit", :default=> "Edit")}", edit_admin_user_path(@user), :class => "button" %>
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}")} #{t("web-app-theme.delete", :default => "Delete")}", admin_user_path(@user), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'templates/sidebar') -%>

